@page
@model RazorPagesPersonal.Pages.Personals.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Создать новую запись</a>
</p>
<table class="table" bgcolor="blue">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Personal[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personal[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personal[0].Experience)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody bgcolor="pink">
@foreach (var item in Model.Personal) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Узнать больше</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
